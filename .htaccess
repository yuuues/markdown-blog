# Rewrite rules for SPA-style routing so the client app (app.js) resolves Markdown and 404
# Works on Apache (e.g., Laragon). Place in the web root of the site.

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the request is for an existing file or directory, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Allow direct access to markdown files in /files
  RewriteRule ^files/ - [L]

  # Otherwise, route everything to index.html (SPA)
  RewriteRule ^ index.html [L]
</IfModule>

# Optional: simple cache headers for static assets (comment out if undesired)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
</IfModule>

<IfModule mod_mime.c>
  AddType text/plain .md
</IfModule>
